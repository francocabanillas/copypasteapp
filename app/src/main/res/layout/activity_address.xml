<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context=".ui.AddressActivity">


    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="322dp"
        android:layout_height="461dp"
        android:layout_gravity="center"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDireccion"
        android:layout_width="179dp"
        android:layout_height="33dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="584dp"
        android:background="@color/colorBotonV2"
        android:fontFamily="@font/roboto_light"
        android:onClick="guardarCambios"
        android:text="Guardar dirección"
        android:textColor="@color/colorWhiteV2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.SearchView
        android:id="@+id/sv_location"
        android:layout_width="299dp"
        android:layout_height="37dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_round"
        android:elevation="5dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:iconifiedByDefault="false"
        android:inputType="textPersonName"
        android:queryHint="Buscar..."
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="516dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Mi dirección:"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txDireccion"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="532dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>