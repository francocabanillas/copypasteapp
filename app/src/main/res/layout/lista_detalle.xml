<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout30"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/observacion2"
        android:layout_width="209dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/roboto_light"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombre_articulo2"
        android:layout_width="187dp"
        android:layout_height="32dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/roboto_bold"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total2"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/roboto_bold"
        android:text="S/ 15.00"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categoria_nombre2"
        android:layout_width="184dp"
        android:layout_height="23dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto_light"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bajar2"
        android:layout_width="29dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorBotonV2"
        android:fontFamily="@font/roboto_bold"
        android:text="-"
        android:textColor="@color/colorWhiteV2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/subir2"
        android:layout_width="31dp"
        android:layout_height="33dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorBotonV2"
        android:fontFamily="@font/roboto_bold"
        android:text="+"
        android:textColor="@color/colorWhiteV2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cantidad2"
        android:layout_width="49dp"
        android:layout_height="41dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:gravity="center|center_horizontal|center_vertical"
        android:inputType="number"
        android:maxLength="2"
        android:text="11"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/precio2"
        android:layout_width="82dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/roboto_bold"
        android:text="PU. S/ 15.00"
        android:textAlignment="viewStart"
        android:textColor="#504848"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>